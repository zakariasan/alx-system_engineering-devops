#!/usr/bin/env bash
#read etc pass with shell
while IFS=: read -r USERNAME PASS USER GROUP_ID _ HOME_DIRECTORY COMMAND ; do
	echo "The user $USERNAME is part of the $GROUP_ID gang, lives in $HOME_DIRECTORY and rides $COMMAND. $USER's place is protected by the passcode $PASS, more info about the user here: $USERNAME"
done < /etc/passwd
